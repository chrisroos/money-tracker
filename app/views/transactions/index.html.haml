- page_title = "Transactions #{@filter}"

- content_for :title do
  = page_title

.row-fluid
  .span8
    %h1= page_title
  .span4
    = link_to url_for(params.merge(edit: true)), class: 'btn pull-right' do
      - ['<i class="icon-edit"></i>', 'Edit transactions'].join(' ').html_safe

- if params[:period]
  .nav
    = link_to_previous_period params[:period]
    = link_to_next_period params[:period]

%table#transactions.table.table-striped.table-condensed.table-bordered
  = render partial: 'table_header'
  = render partial: 'table_footer'
  = render partial: 'table_body', locals: {date_format: @date_format}

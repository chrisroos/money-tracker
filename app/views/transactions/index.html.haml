- page_title = "Transactions for #{Date.from_period(params[:period]).to_s(:month_and_year)}"

- content_for :title do
  = page_title

%h1= page_title

%ul.nav.nav-pills
  %li
    = link_to 'Edit transactions', transactions_path(:period => params[:period], :edit => true)
  %li
    = link_to_previous_period params[:period]
  %li
    = link_to_next_period params[:period]

%table#transactions.table.table-striped.table-condensed.table-bordered
  = render :partial => 'table_header'
  = render :partial => 'table_footer'
  = render :partial => 'table_body', :locals => {:date_format => :weekday_and_day}
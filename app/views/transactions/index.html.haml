= form_tag search_transactions_path, :method => :get do
  = label_tag :q, 'Search transactions'
  = text_field_tag :q
  = submit_tag 'Search'

%table.transactions
  %thead
    %tr
      %th Date
      %th Name
      %th Memo
      %th Paid in
      %th Paid out
      %th Note
  %tbody
    - @transactions.each do |transaction|
      = content_tag_for(:tr, transaction) do
        %td.date= transaction.date.to_formatted_s(:rfc822)
        %td.name= transaction.name.titleize
        %td.memo= transaction.memo.titleize if transaction.memo
        %td.paid_in= number_to_currency(transaction.amount/100.0, :unit => '£') if transaction.amount > 0
        %td.paid_out= number_to_currency(-transaction.amount/100.0, :unit => '£') if transaction.amount < 0
        %td.note= transaction.note
        %td.actions= link_to "edit", edit_transaction_path(transaction)
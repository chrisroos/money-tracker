- page_title = "Transactions matching '#{params[:q]}'"

- content_for :title do
  = page_title

%h1= page_title

%ul.nav.nav-pills
  %li
    = link_to 'Edit transactions', search_transactions_path(:q => params[:q], :edit => true)

%table#transactions.table.table-striped.table-condensed
  = render :partial => 'table_header'
  = render :partial => 'table_footer'
  = render :partial => 'table_body', :locals => {:date_format => :human_friendly}
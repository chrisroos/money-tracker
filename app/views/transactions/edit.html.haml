- page_title = "Edit transaction"

- content_for :title do
  = page_title
  
%h1= page_title

= form_for @transaction do |transaction_form|
  %div
    = transaction_form.label :date
    = transaction_form.text_field :date, :size => '10', :value => @transaction.date
  %div
    = transaction_form.label :description
    = transaction_form.text_field :description, :size => '80', :value => @transaction.description
  %div
    = transaction_form.label :note
    = transaction_form.text_area :note, :size => '40x3'
  %div
    = transaction_form.label :category
    = transaction_form.text_field :category, :size => 40
  %div
    = transaction_form.submit 'Save'
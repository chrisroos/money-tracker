!!! 5
%html
  %head
    %title= ['MoneyTracker', ENV['MONEY_TRACKER_APP_NAME'], yield(:title)].compact.join(' - ')
    = csrf_meta_tag
    %meta{:charset => 'utf-8'}
    = javascript_include_tag 'jquery-1.6.1.min.js', 'jquery.color.js', 'application'
    = stylesheet_link_tag :all

  %body
    -if flash[:info]
      #flash= flash[:info]
    #header
      #title
        = link_to ['Money Tracker', ENV['MONEY_TRACKER_APP_NAME']].compact.join(' - '), root_path
      #navAndSearch
        %nav
          = link_to 'Recent transactions', transactions_path
          = link_to 'Upload statement', new_upload_path
        #searchContainer
          = form_tag search_transactions_path, :method => :get do
            = label_tag :q, 'Search transactions'
            = text_field_tag :q, params[:q], :size => '60'
            = submit_tag 'Search'
    = yield